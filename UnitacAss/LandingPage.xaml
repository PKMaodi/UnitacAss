<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitacAss.LandingPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <ListView
                x:Name="WeekForecast"
                ItemsSource="{Binding WeatherForecast}"
                ItemSelected="GotoDetailsPage">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="12">
                                <Label Text="{Binding Day}" FontAttributes="Bold"/>
                                <Label Text="{Binding MinTemp}" TextColor="Blue"/>
                                <Label Text="{Binding MaxTemp}" TextColor="Red"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
